<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    <title>URL SHORTNER</title>
</head>

<body>
    <div class="container">
        <form action="/shortUrls" method="POST" class="my-4 form-inline">
            <h1 class="text-center">url shortner</h1>
            <label for="fullurl" class="sr-only">url</label>
            <input required placeholder="URL" type="url" id="fullurl" name="fullurl" style="min-width: 60vw;" class="form-control col mr-2">
            <button type="submit" class="btn btn-success">Shrink</button>
        </form>
        <div class="table-responsive">
            <table class="table table-striped">
                <thead class="thead-dark">
                    <tr>
                        <th>Full url</th>
                        <th>Short url</th>
                        <th>Clicks</th>
                    </tr>
                </thead>
                <tbody>
                    <% shortUrls.forEach(shortUrl => { %>
                        <tr>
                            <td>
                                <a href='<%= shortUrl.full %> '>
                                    <%= shortUrl.full %>
                                </a>
                            </td>
                            <td>
                                <a href='<%= shortUrl.short %> '>
                                    <%= shortUrl.short %>
                                </a>
                            </td>
                            <td>
                                <%= shortUrl.clicks %>
                            </td>
                        </tr>
                        <% }) %>

                </tbody>
            </table>
        </div>

    </div>


</body>

</html>
<style>
    body {
        font-family: 'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif;
    }
</style>